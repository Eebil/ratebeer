<h2>List of ratings</h2>

<p>Number of ratings: <%= @ratings.count %> </p>
<p> <%= link_to "Submit new rating", new_rating_path %></p>

<ul>
  <% @ratings.each do |rating| %>
  <li> <%= rating %> <%= button_to 'delete', rating, method: :delete, form: { data: { turbo_confirm: 'Are you sure you want to delete this review' }} %> </li>
  <% end %>
</ul>

